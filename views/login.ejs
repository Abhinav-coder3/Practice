<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white flex flex-col items-center justify-center min-h-screen">

  <!-- Logout link (optional) -->
  <a href="/logout" class="mb-2 text-blue-400 hover:underline text-lg font-medium">
    Logout
  </a>

  <!-- Page heading -->
  <h3 class="text-2xl font-semibold mb-4">Login</h3>

  <!-- Login Form -->
  <form action="/login" method="POST" class="bg-zinc-800 p-6 rounded-lg shadow-lg w-96 space-y-4">
    <input type="email" name="email" placeholder="Email" class="w-full p-2 rounded bg-zinc-700 border border-zinc-600" required>
    <input type="password" name="password" placeholder="Password" class="w-full p-2 rounded bg-zinc-700 border border-zinc-600" required>
    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 p-2 rounded text-white font-bold">
      Login
    </button>
  </form>

</body>
</html>
